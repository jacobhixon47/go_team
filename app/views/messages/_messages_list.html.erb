<% if @channel.messages.all.any? %>
  <% @channel.messages.all.each do |message| %>
    <% if message.user === current_user %>
        <li class="f-row responsive message-row">
          <div class="f-col-3 bg-pop text-light current-user-message-col">
            <h4><%= message.user.username %> (you)</h4>
            <p><%= message.content %></p>
          </div>
        </li>
    <% else %>
      <li class="f-row responsive message-row">
        <div class="f-col-3 bg-light text-pop foreign-user-message-col">
          <h4><%= message.user.username %></h4>
          <p><%= message.content %></p>
        </div>
      </li>
    <% end %>
  <% end %>
<% end %>
